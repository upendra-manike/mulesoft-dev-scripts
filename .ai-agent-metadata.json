{
  "repository": {
    "name": "mulesoft-dev-scripts",
    "description": "Open-source scripts and tools to solve common MuleSoft development and operations problems",
    "type": "developer-tools",
    "language": ["python", "bash"],
    "platform": "mulesoft"
  },
  "scripts": [
    {
      "id": "config-validator",
      "name": "Configuration Validator",
      "path": "config-validator/validate-properties.py",
      "language": "python",
      "purpose": "Validates MuleSoft project configuration files and property placeholders",
      "problems_solved": [
        "Missing property placeholders",
        "Invalid mule-artifact.json",
        "Duplicate properties",
        "Unused properties"
      ],
      "usage": "python validate-properties.py --project-path <path>",
      "output_formats": ["text", "json"]
    },
    {
      "id": "runtime-diagnostics",
      "name": "Runtime Diagnostics",
      "path": "runtime-diagnostics/mule-runtime-check.sh",
      "language": "bash",
      "purpose": "Diagnoses MuleSoft runtime issues",
      "problems_solved": [
        "Java version compatibility",
        "Port conflicts",
        "Memory issues",
        "Classpath problems"
      ],
      "usage": "./mule-runtime-check.sh <project-path>",
      "output_formats": ["text", "json"]
    },
    {
      "id": "log-analyzer",
      "name": "Log Analyzer",
      "path": "log-analyzer/analyze-logs.py",
      "language": "python",
      "purpose": "Analyzes MuleSoft logs for common issues",
      "problems_solved": [
        "Missing correlation IDs",
        "High error rates",
        "Log flooding",
        "Error pattern analysis"
      ],
      "usage": "python analyze-logs.py <log-file> [--verbose]",
      "output_formats": ["text", "json"]
    },
    {
      "id": "security-scanner",
      "name": "Security Scanner",
      "path": "security-scanner/secret-scan.py",
      "language": "python",
      "purpose": "Scans MuleSoft projects for security vulnerabilities",
      "problems_solved": [
        "Hardcoded secrets",
        "Weak TLS versions",
        "Insecure HTTP listeners",
        "Security misconfigurations"
      ],
      "usage": "python secret-scan.py --path <project-path> [--fail-on high]",
      "output_formats": ["text", "json"]
    },
    {
      "id": "api-validator",
      "name": "API Validator",
      "path": "api-validator/raml-vs-flow-check.py",
      "language": "python",
      "purpose": "Validates API configurations and contract mismatches",
      "problems_solved": [
        "RAML/OpenAPI mismatches",
        "API listener issues",
        "TLS/HTTPS validation",
        "CORS configuration"
      ],
      "usage": "python raml-vs-flow-check.py --project-path <path>",
      "output_formats": ["text", "json"]
    },
    {
      "id": "munit-analyzer",
      "name": "MUnit Analyzer",
      "path": "munit-analyzer/munit-coverage.py",
      "language": "python",
      "purpose": "Analyzes MUnit test coverage and quality",
      "problems_solved": [
        "Low test coverage",
        "Missing test assertions",
        "Uncovered flows",
        "Test quality issues"
      ],
      "usage": "python munit-coverage.py --project-path <path>",
      "output_formats": ["text", "json"]
    }
  ],
  "example_projects": {
    "clean": "examples/sample-mule-project",
    "with_issues": "examples/sample-mule-project-with-issues",
    "sample_logs": "examples/sample-logs"
  },
  "installation": {
    "method": "git_clone",
    "requirements": ["python3.7+", "bash4.0+"]
  }
}

